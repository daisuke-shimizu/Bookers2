<!DOCTYPE html>
<html> 
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="navbar navbar-inverse">
  <div class="container">
  <nav class="nav navbar-nav navbar-left">
  <h4><%= link_to "Bookers", root_path, class: "home" %></h4>
  </nav>

  <nav>
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
    <% if user_signed_in? %>
      <li class="">
        <%= link_to user_path(current_user), class: "home" do%>
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
        <% end %>
      </li>
      <li class="">
        <%= link_to users_path, class: "users" do%>
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users
        <% end %>
      </li>
      <li class="">
        <%= link_to books_path, class: "books" do%>
        <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Books
        <% end %>
      </li>
      <li class="">
        <%= link_to destroy_user_session_path, method: :delete, class: "logout"  do%>
        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Log out
        <% end %>
      </li>
    <% else %>
      <li class="">
        <%= link_to root_path, class: "home" do%>
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
        <% end %>
      </li>
      <li class="">
        <%= link_to home_about_path, class: "about" do%>
        <span class="glyphicon glyphicon-link about" aria-hidden="true"></span> About
        <% end %>
      </li>
      <li class="">
        <%= link_to new_user_registration_path, class: "sign_up" do%>
        <span class="glyphicon glyphicon-edit sign_up" aria-hidden="true"></span> Sign up
        <% end %>
      </li>
      <li class="">
        <%= link_to new_user_session_path, class: "sign_in" do%>
        <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Log in
        <% end %>
      </li>
    <% end %>
    </ul>
  
  </nav>
  </div>
  </header>

  <body>
  <div class="container">
    <%= yield %>
    </div>
  </body>

  <footer>
    <div class="container">
    
      <div class="row">
        
        <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Daisuke Shimizu </p>
        </div>
        
      </div>
   
    </div>
  </footer>

</html>

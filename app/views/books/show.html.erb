<h2>Detail of Book</h2>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
<table border="1">
  
  <tr>
    <th>User name</th>
    <th>Title</th>
    <th>opinion</th>
  </tr>
   
  <tr>
    <td><%= attachment_image_tag @user, :image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
    <td><%= @book.title %></td>
    <td><%= @book.opinion %></td>
    <td> <%= link_to "Edit", edit_book_path(@book) %></td>
    <td> <%= link_to "Delete", book_path(@book), method: :delete %></td>

  </tr>
</table>

 <h2>Editing Book</h2>
<%= form_for(@book) do |f| %>
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Title</label>
        <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"本の題名"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Self_Introduction</label>
        <%= f.text_field :opinion, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"本の感想"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
                         
    <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>  
 <div class="container">
 <div class="row">
 
 <div class="col-md-6 col-md-offset-3">
 <h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Title</label>
        <%= f.text_field :title, autofocus: true, class:"form-control book_title", id:"inputEmail", placeholder:"本の題名"%>
        
    </div>
    <h4>Opinion</h4>
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Self_Introduction</label>
        <%= f.text_field :opinion, autofocus: true, class:"form-control book_body", id:"inputEmail", placeholder:"本の感想"%>
        
    </div>
                         
    <%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
<% end %>  
<%= link_to "show", book_path(@book), class:"book_#{@book.id}" %> |
<%= link_to "back", books_path, class:"back" %>
</div>
</div>
</div>
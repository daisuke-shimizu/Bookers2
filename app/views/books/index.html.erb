<h2>User info</h2>
　
<div class="col-xs-3">
<h2>User info</h2>
<h4>画像</h4>
<%= attachment_image_tag current_user, :image, :fill, 100, 100, format: 'jpeg' %>
<table>
<tr>
<th>名前</th>
<th><%= current_user.name %></th> 
</tr>
<th>本文</th>
<th><%= current_user.self_intro %></th> 
</table>


<h2><%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></h2>


<h2>New Book</h2>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group has-icon">
        <label class="control-label sr-only">Title</label>
        <%= f.text_field :title, class:"form-control", placeholder:"本の題名" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
      </div>
    </div>
    <div class="col-sm-6">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= f.text_area :opinion, class:"form-control", rows:"3", placeholder:"感想をここに" %>
    </div>
  </div>
  <hr>
  <%= f.submit "送信", class:"btn btn-primary col-xs-12 mt-20" %>
<% end %>
</div>
<div class="col-xs-9">


<h2>Books　一覧</h2>
<table class="table">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  </thead>
  <tbody>
   <% @books.each do |b| %>
  <tr>
    <td><%= attachment_image_tag b.user, :image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
    <td><%= link_to b.title , book_path(b) %></td>
    <td><%= b.opinion %></td>
  </tr>
 <%end%>
 </tbody>
</table> 
</div>